<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="http://beta.adalab.es/resources/stylesheets/all.css" />
    <title>Página de promoción</title>
  </head>
  <body class="page">
    <h1 class="mb-1">Promociones de Adalab</h1>
    <%- include('../partials/menu'); %>

    <h2 class="mb-1">Bienvenida a la página promo <%= letter %>: <%= name %></h2>

    <!-- students empty list -->
    <% if (students.length === 0) { %>
    <p>Esta promo no tiene alumnas</p>
    <% } %>

    <!-- students list -->
    <% if (students.length > 0) { %>

    <h3 class="mb-1">Aquí dispones del listado de alumnas de la promoción:</h3>

    <ul class="cards">
      <% students.forEach(function(student){ %>
      <li class="card">
        <h3 class="card__title"><%= student.name %></h3>
        <p class="card__description"><%= student.age %> años</p>
      </li>
      <% }); %>
    </ul>
    <% } %>
  </body>
</html>
